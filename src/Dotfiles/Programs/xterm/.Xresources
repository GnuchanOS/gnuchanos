! refrest xterm -> xrdb -merge ~/.Xresources
xterm*background: #150129
xterm*foreground: #9019ff

! Extra Colors
xterm*color0: #000000
xterm*color1: #ff5555
xterm*color2: #50fa7b
xterm*color3: #f1fa8c
xterm*color4: #bd93f9
xterm*color5: #ff79c6
xterm*color6: #8be9fd
xterm*color7: #bbbbbb
xterm*color8: #44475a
xterm*color9: #ff5555
xterm*color10: #50fa7b
xterm*color11: #f1fa8c
xterm*color12: #bd93f9
xterm*color13: #ff79c6
xterm*color14: #8be9fd
xterm*color15: #ffffff

! font
xterm*faceName: Sans Mono:antialias=true:pixelsize=10

! Scrool
xterm*geometry: 80x25
*scrollBar: 0
*saveLines: 12288
*scrollTtyOutput: false
*scrollWithBuffer: true
xterm*rightScrollBar: true

! Select Text Color
xterm*highlightColor: #5a189a
! UTF-8 Support
xterm*locale: true
xterm*utf8: 2


! Copy/Paste
XTerm*vt100.translations: #override \
    Shift Ctrl <Key> C: copy-selection(CLIPBOARD) \n\
    Shift Ctrl <Key> V: insert-selection(CLIPBOARD)








